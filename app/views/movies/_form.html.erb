
<%= form_with(model: movie, local: true) do |f| %>
<%# <%= @movie.errors.full_messages.first if @movie.errors.any?%> %>

<%# <%= render "shared/errors", movie: movie %> %>

<%= f.label :name %>
<%= f.text_field :name, autofocus: true, required: true, class: "form-control"%>
<%= f.error_message_for(:name) %>

<%= f.label :description %>
<%= f.text_area :description, row: 5 %>

<%= f.label :price %>
<%= f.number_field :price %>

<%= f.label :starts_at %>
<%= f.datetime_select :starts_at, {ampm: true}, {class: "datetime"} %>

<%= f.label :capacity %>
<%= f.number_field :capacity %>

<%= f.label :image_File_Name %>
<%= f.text_field :image_file_name %>

<%= f.submit %>

<% end %>